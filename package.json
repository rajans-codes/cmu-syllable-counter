{
  "name": "cmu-syllable-counter",
  "version": "1.0.0",
  "type": "module",
  "description": "Fast and accurate syllable counter for English words using CMU Dictionary",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=8192\" rollup -c",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js}",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "syllables",
    "syllable",
    "cmu",
    "cmudict",
    "arpabet",
    "pronunciation",
    "english",
    "dictionary",
    "phonetics",
    "language"
  ],
  "author": "Rajan Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajans-codes/cmu-syllable-counter.git"
  },
  "bugs": {
    "url": "https://github.com/rajans-codes/cmu-syllable-counter/issues"
  },
  "homepage": "https://github.com/rajans-codes/cmu-syllable-counter#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rollup": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
